  "item": [
    {
      "name": "Class A",
      "item": [
        {
          "name": "Balances",
          "item": [
            {
              "name": "Get token balances for address",
              "request": {
                "description": "[Full Endpoint Documentation](https://www.covalenthq.com/docs/api/#/0/Get%20token%20balances%20for%20address/USD/1)\n\nGiven `chain_id` and wallet `address`, return current token balances along with their spot prices. This endpoint supports a variety of token standards like ERC20, ERC721 and ERC1155. As a special case, network native tokens like ETH on Ethereum are also returned even though it's not a token contract.",
                "url": {
                  "raw": "{{baseUrl}}/v1/{chain_id}/address/:wallet_address/balances_v2?nft=&no-nft-fetch=&quote-currency=",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "v1",
                    "{chain_id}",
                    "address",
                    ":wallet_address",
                    "balances_v2"
                  ],
                  "query": [
                    {
                      "key": "nft",
                      "value": "",
                      "description": "Set to `true` to return ERC721 and ERC1155 assets. Defaults to `false`."
                    },
                    {
                      "key": "no-nft-fetch",
                      "value": "",
                      "description": "Set to `true` to skip fetching NFT metadata, which can result in faster responses.  Defaults to `false` and only applies when `nft=true`.\n"
                    },
                    {
                      "key": "quote-currency",
                      "value": "",
                      "description": "The requested fiat currency."
                    }
                  ],
                  "variable": [
                    {
                      "key": "chain_id",
                      "value": ""
                    },
                    {
                      "key": "wallet_address",
                      "value": ""
                    }
                  ]
                },
                "header": [],
                "method": "GET"
              },
              "response": [],
              "_type": "endpoint"
            },
            {
              "name": "Get Historic Portfolio value over time",
              "request": {
                "description": "[Full Endpoint Documentation](https://www.covalenthq.com/docs/api/#/0/Get%20historical%20portfolio%20value%20over%20time/USD/1)\n\nGiven `chain_id` and wallet `address`, return wallet value for the last 30 days at 24 hour interval timestamps.",
                "url": {
                  "raw": "{{baseUrl}}/v1/{chain_id}/address/:wallet_address/portfolio_v2?quote-currency=&days=",
                  "host": [
                    "{{baseUrl}}"
                  ],
                  "path": [
                    "v1",
                    "{chain_id}",
                    "address",
                    ":wallet_address",
                    "portfolio_v2"
                  ],
                  "query": [
                    {
                      "key": "quote-currency",
                      "value": "",
                      "description": "The requested fiat currency."
                    },
                    {
                      "key": "days",
                      "value": "",
                      "description": "The range of the historical portfolio in days, defaults to 30 days (max days = 2000).\n"
                    }
                  ],
                  "variable": [
                    {
                      "key": "chain_id",
                      "value": ""
                    },
                    {
                      "key": "wallet_address",
                      "value": ""
                    }
                  ]
                },
                "header": [],
                "method": "GET"
              },
              "response": [],
              "_type": "endpoint"
            }
          ],
          "_type": "container"
        }
      ],
      "_type": "container"
    },
